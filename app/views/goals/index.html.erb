<p id="notice"><%= notice %></p>

<h1>Listing Goals</h1>

<table>
  <thead>
    <tr>
      <th>Goal title</th>
      <th>Time allotted</th>
      <th>Goal description</th>
      <th>Goal potential met</th>
      <th>Total data pts</th>
      <th>Time recommendation</th>
      <th>Speed recommendation</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @goals.each do |goal| %>
      <tr>
        <td><%= goal.goal_title %></td>
        <td><%= goal.time_allotted %></td>
        <td><%= goal.goal_description %></td>
        <td><%= goal.goal_potential_met %></td>
        <td><%= goal.total_data_pts %></td>
        <td><%= goal.time_recommendation %></td>
        <td><%= goal.speed_recommendation %></td>
        <td><%= goal.user %></td>
        <td><%= link_to 'Show', goal %></td>
        <td><%= link_to 'Edit', edit_goal_path(goal) %></td>
        <td><%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

